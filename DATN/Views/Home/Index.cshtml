<script>
    function smoothScrollBy(element, distance, duration) {
        let start = element.scrollLeft;
        let startTime = performance.now();

        function scrollStep(currentTime) {
            let elapsedTime = currentTime - startTime;
            let progress = Math.min(elapsedTime / duration, 1);
            let ease = progress * (2 - progress);

            element.scrollLeft = start + distance * ease;

            if (progress < 1) {
                requestAnimationFrame(scrollStep);
            }
        }

        requestAnimationFrame(scrollStep);
    }

    // Hàm cuộn cho danh sách sản phẩm chính
    function scrollProducts(direction) {
        const productList = document.querySelector('.product-list');
        const productWidth = document.querySelector('.product-item').offsetWidth + 10;
        smoothScrollBy(productList, direction * productWidth, 500);
    }

    // Hàm cuộn cho danh sách sản phẩm 1
