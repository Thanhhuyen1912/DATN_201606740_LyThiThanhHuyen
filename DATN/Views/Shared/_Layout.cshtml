</head>
<body class="bg-white text-gray-800">
    <!-- Header -->
    <header class="border-b bg-white relative">
        <div class="container mx-auto flex justify-between items-center  px-6">
            <!-- Logo -->
            <div class="flex items-center">
                <img alt="Rosie Beauty logo" class="hidden md:block" height="60" src="/images/2.jpg" width="120" />
            </div>

            <!-- Button Toggle Menu (Mobile) -->
            <button id="menu-toggle" class="md:hidden text-gray-800 focus:outline-none">
                <i class="fas fa-bars text-2xl"></i>
            </button>

            <!-- Navbar -->
            <nav id="nav-menu" class="hidden md:flex flex-col md:flex-row
      space-y-4 md:space-y-0 md:space-x-6
      absolute md:relative top-8 left-0 md:top-auto md:left-auto
      bg-white md:bg-transparent w-full md:w-auto shadow-md md:shadow-none
      p-4 md:p-0 z-50">
                <a class="block md:inline text-gray-800 hover:text-gray-600 py-2" href="#">TRANG CHỦ</a>
                <a class="block md:inline text-gray-800 hover:text-gray-600 py-2" href="#">GIỚI THIỆU</a>
                <a class="block md:inline text-gray-800 hover:text-gray-600 py-2 flex items-center" href="#">
                    SẢN PHẨM <i class="fas fa-chevron-down text-gray-500 ml-2"></i>
                </a>
                <a class="block md:inline text-gray-800 hover:text-gray-600 py-2" href="#">LIÊN HỆ</a>
                <a class="block md:inline text-gray-800 hover:text-gray-600 py-2" href="#">TIN TỨC</a>
            </nav>
            <div class=" d-none d-md-flex space-x-4">
                <i class="fas fa-search text-gray-800"></i>
                <i class="fas fa-user text-gray-800"></i>
                <div class="relative">
                    <i class="fas fa-shopping-bag text-gray-800"></i>
                    <span class="absolute top-[-8px] right-[-8px] bg-red-600 text-white text-[10px] rounded-full px-[3px] py-[1px] leading-none">
                        0
                    </span>

                </div>
            </div>
        </div>
    </header>

    <!-- Script Toggle Navbar -->
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function () {
          let menu = document.getElementById("nav-menu");
          menu.classList.toggle("hidden");
          menu.classList.toggle("flex");
        });
    </script>




    <!-- Breadcrumb -->
    <div class="bg1 py-2">
        <div class="container mx-auto px-6">
            <a class="text-gray-600" href="#">
                Trang chủ
            </a>
            <span class="text-gray-600">
                »
            </span>
            <span class="text-orange-600">
                Giỏ hàng
            </span>
        </div>
    </div>
    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!---- End main -->
    <!-- Footer -->
    <div class="bg1 py-6">
        <div class="container">
            <!-- Social Icons -->
            <div class="flex justify-center space-x-6 mb-6">
