@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .login-container {
        background: white;
        padding: 40px;
        border-radius: 8px;
        width: 380px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        text-align: center;
        margin: 10px auto;
    }

        .login-container h2 {
            margin-bottom: 10px;
        }

        .login-container p {
            margin-bottom: 25px;
        }

            .login-container p a {
                color: #f48b8b;
                text-decoration: none;
            }

        .login-container input[type="email"],
        .login-container input[type="password"] {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: none;
            background: #eee;
            font-size: 14px;
        }

        .login-container button {
            width: 100%;
            padding: 12px;
            background: #222;
            color: white;
            border: none;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }

        .login-container a.forgot {
            display: block;
            margin-top: 12px;
            font-size: 14px;
            color: #222;
            text-decoration: none;
        }

        .login-container .or {
            margin: 20px 0 10px;
            font-size: 14px;
        }

    .social-login {
        display: flex;
        gap: 10px;
        justify-content: center;
    }


    .social-btn {
        flex: 1;
        padding: 10px;
        color: white;
        text-decoration: none;
        font-size: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
    }

    .facebook {
        background-color: #3b5998;
    }

    .google {
        background-color: #dd4b39;
    }

    .social-btn i {
        margin-right: 5px;
    }
</style>
<div class="login-container">
    @ViewBag.ThongBao
    <h2>ĐĂNG KÝ</h2>
    <p>Nếu bạn đã có tài khoản, <a href="/TaiKhoan/DangNhap">đăng nhập tại đây</a></p>
    <form id="login-form" action="/TaiKhoan/DangKy" method="POST">
        <input type="text" class="form-control mt-2" name="hoten" placeholder="Họ tên" required>
        <input type="text" class="form-control mt-2" id="email" name="email" placeholder="Email" required>
        <input type="text" class="form-control mt-2" name="matkhau" placeholder="Mật khẩu" required>
        <input type="text" class="form-control mt-2" name="sodienthoai" placeholder="Số điện thoại" required>
        <button type="submit" class="btn btn-primary mt-2">Đăng ký</button>

    </form>
    <a href="#" class="forgot">Quên mật khẩu</a>

    <div class="or">Hoặc đăng nhập bằng</div>

    <div class="social-login">
        <a href="#" class="social-btn facebook">
            <i class="fab fa-facebook-f"></i> Facebook
        </a>
        <a href="#" class="social-btn google">
            <i class="fab fa-google-plus-g"></i> Google
        </a>
    </div>
</div>

<script>

    @if (TempData["LoginMessage"] != null)
    {
        <text>
                          alert(@Html.Raw(Json.Serialize(TempData["LoginMessage"])));
        </text>
    }
    @if (ViewBag.ThongBao != null)
    {
        <text>
                                  alert(@Html.Raw(Json.Serialize(ViewBag.ThongBao));
        </text>
    }

</script>
